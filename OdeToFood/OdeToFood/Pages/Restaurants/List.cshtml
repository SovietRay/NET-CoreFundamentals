@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}




<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    @if (Model.Message != null)
    {
        <div class="alert alert-primary" role="alert">
            @Model.Message
        </div>
    }
    <form method="get">
        <div class="form-group">
            <div class="input-group mb-3">
                <input type="search" class="form-control" placeholder="Input name..." aria-label="Search" aria-describedby="basic-addon2" asp-for="SearchTerm" />
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div>
        <h1 class="display-4" style="display: inline-block">List of restaurants </h1>
        <a asp-page="./Edit" class="badge badge-primary" style="vertical-align: top; font-size: 15px">Add</a>
    </div>

</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var restaurant in Model.Restaurants)
    {
        <partial name="_Summary" model="restaurant" />
    }
</div>
@section footer {
    <div>
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2021 Copyright
        </div>
        <!-- Copyright -->
    </div>
}

